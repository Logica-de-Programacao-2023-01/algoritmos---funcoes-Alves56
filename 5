package main

import "fmt"

func main() {
	numbers := []int{10, 5, 8, 3, 15}
	value := 8
	index := findFirstOccurrence(numbers, value)
	fmt.Println("Posição do primeiro valor igual:", index)
}

func findFirstOccurrence(numbers []int, value int) int {
	for i, num := range numbers {
		if num == value {
			return i
		}
	}
	return -1
}
